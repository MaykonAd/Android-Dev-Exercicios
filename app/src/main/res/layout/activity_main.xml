<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent" tools:layout_editor_absoluteY="81dp">

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radiosexo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent" app:layout_constraintBottom_toTopOf="parent"/>
    <RadioButton
            android:text="Masculino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonM"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintEnd_toStartOf="@+id/radioButtonF" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/calcular" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="51dp" android:layout_marginStart="51dp" android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"/>
    <RadioButton
            android:text="Feminino"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/radioButtonF"
            app:layout_constraintBaseline_toBaselineOf="@+id/radioButtonM"
            app:layout_constraintStart_toEndOf="@+id/radioButtonM" android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calcular"
            android:onClick="calcularPesoIdeal"
            app:layout_constraintTop_toBottomOf="@+id/radioButtonM" android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/text"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Calcule o peso ideal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView7" android:textSize="30sp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="28dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp" android:layout_marginEnd="51dp" android:layout_marginRight="51dp"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginBottom="31dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/radioButtonM"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" android:layout_marginEnd="26dp" android:layout_marginRight="26dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entre com a altura" android:id="@+id/inpaltura"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
            android:text="Resultado"
            android:layout_width="179dp"
            android:layout_height="0dp"
            android:id="@+id/text1" android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/calcular" android:layout_marginBottom="128dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.619"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>